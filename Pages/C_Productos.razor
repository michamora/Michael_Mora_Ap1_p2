@page "/C_Productos"

@using Parcial2.Models
@using Parcial2.BLL 
@inject IToastService toastService


<EditForm Model="lista">
    <div class="card">
    
        <div class="card-header">
            <h4>Consulta Productos </h4>
        </div>

        <div class="card-body">
            <form>
                <div class="input-group d-flex align-items-end">
                    <InputSelect class="form-control col-2" @bind-Value="Filtro">
                    
                        <option value="0">Todos</option>
                        <option value="1">Id</option>
                        <option value="2">Descripcion</option>
                        <option value="3">Existencia</option>
                        <option value="4">Costo</option>
                        <option value="5">Ganancia</option>
                        <option value="6">Fecha de vencimiento</option>
                    </InputSelect>

                    <div class="flex-fill mx-2">
                        <label>Criterio</label>
                        <InputText class="form-control" @bind-Value="Criterio" />
                    </div>

                    <button type="button" class="btn btn-lg btn-outline-secondary " @onclick="MostrarFecha"><span
                            class="oi oi-calendar mx-2"></span>Fecha </button>
                    <button type="button" class="btn btn-lg btn-primary" @onclick="Consultar"><span
                            class="oi oi-magnifying-glass"></span>Consultar</button>

                </div>
    
          @if (@listado)
                {
                    <div class="input-group d-flex align-items-end">

                        <div class="flex-fill mx-2">
                            <label>Desde</label>
                            <InputDate class="form-control" @bind-Value="Desde" />
                        </div>

                        <div class="flex-fill mx-2">
                            <label>Hasta</label>
                            <InputDate class="form-control" @bind-Value="Hasta" />
                        </div>

                    </div>
                }
                
            </form>
    
        </div>
    
         <table class="table table-light">
            <thead class="thead">
                <tr class="table-warning">

                    <th>ProductoId</th>

                    <th>Descripci√≥n</th>

                    <th>Existencia</th>    

                    <th>Costo</th>          

                    <th>ValorInventario</th>    

                    <th>Ganancia</th>   

                    <th>Precio</th>   
   
                    <th>Fecha de vencimiento</th>
                    
                </tr>
            </thead>
    
            <tbody>
                @foreach (var item in lista)
                {
                    <tr>
                        <td>@item.ProductoId</td>
                        
                        <td>@item.Descripcion</td>
                        
                        <td>@item.Existencia</td>

                        <td>@item.Costo</td>

                        <td>@item.ValorInventario</td>

                        <td>@item.Ganancia %</td>

                        <td>@item.Precio</td>

                        <td>@item.FechaVencimiento</td>
                       
                        
                         <td><a class="btn btn-sm btn-outline-primary oi oi-eye" href="R_Productos/@item.ProductoId"></a>
                        </td>
                    </tr>
                    
                }
                
            </tbody>
            
        </table>
    
    </div>
</EditForm>



@code{
    
    [EditorRequired]
    public string Filtro { get; set; } = String.Empty;
    public string Criterio { get; set; } = String.Empty;

    public  float Resultado { get; set; }
    public DateTime Desde { get; set; }
    public DateTime Hasta { get; set; }
    public List<Productos> lista { get; set; } = new List<Productos>();
    

    [Inject]
    public ProductoBLL productoBLL { get; set; }
     bool listado = false;


  private void Calcular()
    {
        float Suma = 0;

        foreach(var producto in lista)
        {
            Suma += producto.ValorInventario;
        }

        Resultado = Suma;
    }
    private void Consultar()
    {

       
        if (Criterio != null)
        {
            switch (Filtro)
            {

                 case "0": //Todos
                    lista = productoBLL.GetLista(p => true);
                    Calcular();
                    break;
                case "1":
                    lista = productoBLL.GetLista(p => p.ProductoId == int.Parse(Criterio));
                    Calcular();
                    break;
                case "2":
                    lista = productoBLL.GetLista(p => p.Descripcion.Contains(Criterio));
                    Calcular();
                    break;
                case "3":
                    lista = productoBLL.GetLista(p => p.Existencia == int.Parse(Criterio));
                    Calcular();
                    break;
                 case "4":
                    lista = productoBLL.GetLista(p => p.Costo == int.Parse(Criterio));
                    Calcular();
                    break;
                 
                 case "5"://Ganancia
                    decimal Ganancia = Convert.ToDecimal(Criterio);
                    lista = productoBLL.GetLista(p => p.Ganancia == int.Parse(Criterio));
                    Calcular();
                    break;

            }

        }
        else
        {
            
            lista = productoBLL.GetLista(p => true);
        }
        toastService.ShowError("No hay producto registrado con ese criterio");
        if (listado == true)
        {
            lista = productoBLL.GetLista(f => f.FechaVencimiento.Date >= Desde && f.FechaVencimiento.Date <= Hasta);
        }
    }
    private void MostrarFecha()
    {
        if (listado == false)
            listado = true;
        else
            listado = false;
    }
}
}